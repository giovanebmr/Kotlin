<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/texto_sorteio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_sorteio"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botao_jogar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/texto_sorteio"
        app:layout_constraintStart_toStartOf="@id/texto_sorteio"
        app:layout_constraintEnd_toEndOf="@id/texto_sorteio"
        android:layout_marginTop="50dp"
        android:onClick="cliqueBotao"
        android:text="jogar!"
        />

    <TextView
        android:id="@+id/texto_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_info"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/botao_jogar"
        app:layout_constraintEnd_toEndOf="@id/botao_jogar"
        app:layout_constraintTop_toBottomOf="@id/botao_jogar" />


</androidx.constraintlayout.widget.ConstraintLayout>